@model List<Cliente>
@{
    ViewData["Title"] = "Gestione Clienti";
}

<h2>Clienti</h2>
<a class="btn btn-success mb-3" href="/Cliente/Create">Aggiungi Cliente</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Cognome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>
                    <a class="btn btn-warning" href="/Cliente/Edit/@cliente.ClienteId">Modifica</a>
                    <a class="btn btn-danger" href="/Cliente/Delete/@cliente.ClienteId">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
